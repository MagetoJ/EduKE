# ==================================
# Production Environment Configuration
# ==================================
# This file is for REFERENCE ONLY
# DO NOT commit actual production secrets to git
# Set these values in your Render Dashboard instead

# Environment Mode
NODE_ENV=production
APP_ENV=production
USE_PRODUCTION_DB=true

# Server Configuration
PORT=3001
FRONTEND_URL=https://eduke-client.onrender.com

# Database Configuration
# Automatically set by Render from DATABASE_URL connection string
# DATABASE_URL is pulled from your Render Postgres database service
# Format: postgresql://username:password@host:port/database?sslmode=require

# JWT Configuration (MUST be set in Render Dashboard - DO NOT expose here)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-production-jwt-secret-here
JWT_REFRESH_SECRET=your-production-refresh-secret-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=https://eduke-client.onrender.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@eduke.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Database Pool Configuration (for PostgreSQL)
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
